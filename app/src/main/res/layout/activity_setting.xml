<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerlayout"
    android:background="@color/back"
    android:layoutDirection="rtl">
    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar"
            android:elevation="20dp"
            >
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.CoordinatorLayout>
    /*
    android:switchPadding="330sp"
    برا فاصله بین سوییچ و متن

    clickable مهمه برا اینگه رو متن زدیم مثل یه باتن عمل کنه
    */

    <ScrollView
        android:layout_marginTop="100dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:id="@+id/updatePhoto"
                android:layout_height="wrap_content"
                android:textColor="#2f2f2f"
                android:text="Update photo"
                android:clickable="true"
                android:layoutDirection="ltr"
                android:height="40dp"
                />

            <Switch
                android:id="@+id/switch_sync"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layoutDirection="ltr"
                android:theme="@style/SwitchCompatTheme"
                android:text="sync over cellular data"
                android:height="40dp"
                /><Switch
            android:id="@+id/switch_send"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layoutDirection="ltr"
            android:theme="@style/SwitchCompatTheme"
            android:text="Send email notifiction"
            android:height="40dp"
            /><Switch
            android:id="@+id/switch_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layoutDirection="ltr"
            android:theme="@style/SwitchCompatTheme"
            android:text="Device notification"
            android:height="40dp"
            /><Switch
            android:id="@+id/switch_vibration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layoutDirection="ltr"

            android:text="Vibration"
            android:height="40dp"
            /><Switch
            android:id="@+id/switch_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layoutDirection="ltr"

            android:text="Sound"
            android:height="40dp"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:paddingTop="10dp"
                android:text="Comments"

                android:textColor="#1565C0" />


            <Switch
                android:id="@+id/switch_commentOnpost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layoutDirection="ltr"

                android:text="Sound"
                android:height="40dp"
                /><Switch
            android:id="@+id/switch_mention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layoutDirection="ltr"

            android:text="Sound"
            android:height="40dp"
            /><Switch
            android:id="@+id/switch_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layoutDirection="ltr"

            android:text="Sound"
            android:height="40dp"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:height="40dp"
                android:paddingTop="10sp"

                android:text="Classes you teach"
                android:textColor="#1565C0" />
            <Switch
                android:id="@+id/switch_late"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layoutDirection="ltr"

                android:text="Late submissions of student work"
                android:height="40dp"
                />
            <Switch
                android:id="@+id/switch_resub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layoutDirection="ltr"

                android:text="Resubmissions of student work"
                android:height="40dp"
                />
            <Switch
                android:id="@+id/switch_invitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layoutDirection="ltr"

                android:text="Invitation to co-teach classes"

                android:height="40dp"
                />
            <Switch
                android:id="@+id/switch_scheduled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layoutDirection="ltr"

                android:text="Scheduled post published or failed"
                android:height="40dp"
                />
        </LinearLayout>
    </ScrollView>


</android.support.v4.widget.DrawerLayout>